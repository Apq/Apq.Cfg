<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFrameworks>net8.0;net10.0</TargetFrameworks>
        <RootNamespace>Apq.Cfg.WebApiDemo</RootNamespace>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <!-- 引用本地 Apq.Cfg.WebApi 项目 -->
        <ProjectReference Include="..\..\Apq.Cfg.WebApi\Apq.Cfg.WebApi.csproj" />
        <!-- 引用多种配置源扩展 -->
        <ProjectReference Include="..\..\Apq.Cfg.Yaml\Apq.Cfg.Yaml.csproj" />
        <ProjectReference Include="..\..\Apq.Cfg.Toml\Apq.Cfg.Toml.csproj" />
        <ProjectReference Include="..\..\Apq.Cfg.Ini\Apq.Cfg.Ini.csproj" />
        <ProjectReference Include="..\..\Apq.Cfg.Xml\Apq.Cfg.Xml.csproj" />
        <ProjectReference Include="..\..\Apq.Cfg.Env\Apq.Cfg.Env.csproj" />
    </ItemGroup>

    <ItemGroup>
        <!-- 配置文件复制到输出目录 -->
        <None Update="config\**\*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
