# 生产环境配置覆盖

APP_NAME=Apq.Cfg WebApi Demo
APP_DEBUG=false

# 日志级别
LOGGING_LOGLEVEL_DEFAULT=Warning
LOGGING_LOGLEVEL_MICROSOFT_ASPNETCORE=Warning

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_USEHTTPS=true

# 数据库
DATABASE_PRIMARY_CONNECTIONSTRING=Server=prod-db.example.com;Database=ApqCfgDemo;User Id=app_user;Password=${DB_PASSWORD};TrustServerCertificate=True
DATABASE_PRIMARY_MAXPOOLSIZE=200
DATABASE_READREPLICA_ENABLED=true

# 缓存
CACHE_PROVIDER=Redis
CACHE_REDIS_ENABLED=true
CACHE_REDIS_CONNECTIONSTRING=prod-redis.example.com:6379

# 安全
SECURITY_ENABLEHTTPS=true
SECURITY_CORS_ALLOWANYORIGIN=false
SECURITY_CORS_ALLOWEDORIGINS=https://app.example.com,https://admin.example.com
SECURITY_RATELIMIT_ENABLED=true
SECURITY_RATELIMIT_PERMITLIMIT=1000
